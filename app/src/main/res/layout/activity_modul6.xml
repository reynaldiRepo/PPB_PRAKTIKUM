<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Modul6"
    android:orientation="vertical"
    android:background="@drawable/animation_list"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@drawable/shadow"
        android:gravity="center"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="Shared Preference"
            android:textStyle="bold"
            android:textSize="23dp"
            android:textAlignment="center" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/shadow"
        >


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/images"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:id="@+id/logo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/logo"
            android:layout_margin="20dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data Dibawah Disimpan Dengan shared preference "
                android:textSize="18dp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:fontFamily="monospace"
                android:textAlignment="center"
                android:layout_marginBottom="3dp"/>

            <EditText
                android:id="@+id/ET_shared_pref"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reynaldi / 170411100049"
                android:textSize="18dp"
                android:textAlignment="center"
                android:backgroundTint="@color/deep_purple_500"
                android:layout_marginBottom="22dp"
                android:fontFamily="monospace"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:background="@drawable/rounded_btn"
                android:textColor="@color/colorWhite"
                android:id="@+id/btn_save_shared_pref"/>
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>